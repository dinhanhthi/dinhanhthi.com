---
layout: page
containerBackgroundType: gray
title: "Hi! I'm Thi"
specialTitleImageUrl: "/img_src/wave.webp"
description: I failed my way to success
customClass: "page-index"
customJS: ["toggle-notes.js"]
icon: '/img_src/avatar_memoji.webp'
date: Last Modified
---

<div class="container wide d-flex d-flex-wrap">
  <div class="main-cats">
    {% for item in categories %}

      {# post outside 11ty .md files #}
      {% set morePosts = false %}

      {% set newPostListCat = [] %}
      {% for post in cat_ex_posts %}
        {% if not post.hide %}
          {% for tg in post.tags %}
            {% if tg == item.name %}
              {% set morePosts = true %}
              {% set singlePost = {
                'title': post.title,
                'url': post.url
              } %}
              {% if post.notfull %}
                {% set singlePost = singlePost | setAttribute('notfull', post.notfull) %}
              {% endif %}
              {% if post.lowQuality %}
                {% set singlePost = singlePost | setAttribute('lowQuality', post.lowQuality) %}
              {% endif %}
              {% if post.private %}
                {% set singlePost = singlePost | setAttribute('private', post.private) %}
              {% endif %}
              {% set newPostListCat = (newPostListCat.push(singlePost), newPostListCat) %}
            {% endif %}
          {% endfor %}
        {% endif %}
      {% endfor %}

      {% if morePosts %}
        {% set morePosts = newPostListCat %}
      {% endif %}

      {% set postslist = collections[item.name] %}
      {% set lenlist = postslist | length %}
      {% if lenlist > 0 %}
        <div class="category-wrapper" name="{{ item.name | lower | trim | replace(" ", "-") }}">
          {% if item.name == 'Blog' %}
            <div class="blog">
              <div class="h2-dots _big _no-dots">
                <h2 id="{{ item.name | lower | trim | replace(" ", "-") }}">
                  <i class="{{ item.fontello }} fontello-icon" style="color: {{item.color}};"></i>
                  <span>{{ item.name }}</span>
                  <a class="heading-more no-effect" href="/blog/">...more</a>
                </h2>
              </div>
              {% set customClass = 'list-of-blog' %}
              {% set customIcon = false %}
              {% set sortBy = 'date' %}
              {% set limitPosts = 4 %}
              {% include "components/postslist.njk" %}
            </div>

            <div class="h2-dots _big _no-dots">
              <h2 class="heading-notes">
                <img alt="Note icon" src="/img_src/icons/notes.svg" width="30" height="30" class="keep-original" />
                <span>Notes</span>
              </h2>
            </div>
          {% else %}
            <div class="category">
              <h2 id="{{ item.name | lower | trim | replace(" ", "-") }}">
                <i class="{{ item.fontello }} fontello-icon"></i>{{ item.name }}
              </h2>
              {% set hideBlogPosts = true %}
              {% set customClass = 'list-homepage list-of-post' %}
              {% set customIcon = true %}
              {% include "components/postslist.njk" %}
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="toc-index-container">

    {% include "components/toggle-posts-buttons.njk" %}

    <div class="toc-index" id="toc-index">
      <h3>Notes by topics</h3>
      <ul class="toc-js toc-common">
        {% for item in categories %}
          {% set postslist = collections[item.name] %}
          {% set lenlist = postslist | length %}
          {% if lenlist > 0 %}
            <li name="toc-li-{{ item.name | lower | trim | replace(" ", "-") }}">
              <i{% if item.name == 'Blog' %} style="color: {{item.color}};"{% endif %} class="{{ item.fontello }} fontello-icon"></i>
              <a href="#{{ item.name | lower | trim | replace(" ", "-") }}">{{ item.name }}</a>
            </li>
          {% endif %}
        {% endfor %}
        <li>
          <a class="no-color" href="/tags/" style="font-style: italic;">More...</a>
        </li>
      </ul>
    </div>

  </div>
</div>